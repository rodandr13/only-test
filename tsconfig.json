{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2015",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }
}
